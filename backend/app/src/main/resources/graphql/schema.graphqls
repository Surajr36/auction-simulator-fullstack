enum PlayerCategory {
  BAT
  BOWL
  AR
  WK
}

type Player {
  id: ID!
  name: String!
  category: PlayerCategory!
  basePrice: Float!
  status: String!
}

input CreatePlayerInput {
  name: String!
  category: PlayerCategory!
  basePrice: Float!
}

type Query {
  players: [Player!]!
}

type Mutation {
  createPlayer(input: CreatePlayerInput!): Player!
}
